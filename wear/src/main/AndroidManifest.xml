<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.tsur.sampleapplication" >

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light" >
        <activity
            android:name=".WearableListViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WatchViewStubActivity"
            android:label="@string/title_activity_watch_view_stub" />
        <activity
            android:name=".DelayedConfirmationViewActivity"
            android:label="@string/title_activity_delayed_confirmation_view" >
        </activity>
        <activity
            android:name=".ConfirmationActivityActivity"
            android:label="@string/title_activity_confirmation" >
        </activity>
        <activity android:name="android.support.wearable.activity.ConfirmationActivity" />
        <activity
            android:name=".DismissOverlayViewActivity"
            android:label="@string/title_activity_dismiss_overlay_view" >
        </activity>
        <activity
            android:name=".CircledImageViewActivity"
            android:label="@string/title_activity_circled_image_view" >
        </activity>
        <activity
            android:name=".BoxInsetLayoutActivity"
            android:label="@string/title_activity_box_inset_layout" >
        </activity>
        <activity
            android:name=".CrossfadeDrawableActivity"
            android:label="@string/title_activity_crossfade_drawable" >
        </activity>
        <activity
            android:name=".CardScrollViewActivity"
            android:label="@string/title_activity_card_scroll_view" >
        </activity>
        <activity
            android:name=".InsetActivityActivity"
            android:label="@string/title_activity_inset" >
        </activity>
        <activity
            android:name=".GridViewPagerActivity"
            android:label="@string/title_activity_grid_view_pager" >
        </activity>
    </application>

</manifest>
